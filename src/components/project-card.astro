---
import ProjectOverviewModal from '@/components/project-overview-modal'

const {data} = Astro.props;
---

<div class="relative h-52 rounded-lg overflow-hidden group">
  <img
    src={data.imageSrc}
    alt={data.title}
    class="transition-transform duration-500 group-hover:scale-105"
  />
  <div class="absolute inset-0 bg-black bg-opacity-50 transition-opacity duration-300 group-hover:bg-opacity-70 flex flex-col justify-end p-6">
    <h3 class="text-xl font-semibold mb-4 text-white">{data.title}</h3>
    <ProjectOverviewModal {...data} client:load />
  </div>
</div>