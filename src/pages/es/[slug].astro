---
import '@/styles/globals.css'
import { getProjectStaticPaths, generateProjectMeta, getProjectNavigation } from '@/utils/projects'
import type { ProjectData } from '@/utils/projects'
import { getTranslations } from '@/i18n/utils'
import Header from '@/components/header'
import { Button } from '@/components/ui/button'
import { LuArrowLeft, LuArrowRight, LuHouse } from 'react-icons/lu'

export async function getStaticPaths() {
  const allPaths = await getProjectStaticPaths()
  // Filter for Spanish routes only
  return allPaths.filter(path => path.props?.lang === 'es')
}

interface Props {
  project: ProjectData
  lang: 'en' | 'es'
  slug: string
}

const { project, lang, slug } = Astro.props
const t = await getTranslations(lang)
const meta = generateProjectMeta(project, lang)
const navigation = getProjectNavigation(slug)
---

<html lang={lang}>
  <head>
    <title>{meta.title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={meta.description}>
    <meta name="keywords" content={`${project.title}, desarrollador frontend, desarrollo web, react.js, next.js, astro, portafolio`}>
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="canonical" href={meta.canonical} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={meta.title} />
    <meta property="og:description" content={meta.description} />
    <meta property="og:image" content={meta.ogImage} />
    <meta property="og:url" content={meta.canonical} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={meta.title} />
    <meta name="twitter:description" content={meta.description} />
    <meta name="twitter:image" content={meta.ogImage} />
    
    <!-- Hreflang tags -->
    <link rel="alternate" hreflang="es" href={`https://franbeccaria.com/es/${slug}`} />
    <link rel="alternate" hreflang="en" href={`https://franbeccaria.com/${slug}`} />
    <link rel="alternate" hreflang="x-default" href={`https://franbeccaria.com/${slug}`} />
  </head>
  <body>
    <Header client:load lang={lang} />
    
    <main class="min-h-screen bg-gray-50">
      <!-- Breadcrumb Navigation -->
      <div class="bg-white border-b">
        <div class="container mx-auto px-4 py-4">
          <nav class="flex items-center space-x-2 text-sm">
            <a href="/es/" class="text-blue-600 hover:text-blue-800 flex items-center">
              <LuHouse className="h-4 w-4 mr-1" />
              {t.navigation?.home || 'Inicio'}
            </a>
            <span class="text-gray-500">/</span>
            <span class="text-gray-900 font-medium">{project.title}</span>
          </nav>
        </div>
      </div>

      <!-- Project Content -->
      <div class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
          <!-- Back to Portfolio Button -->
          <div class="mb-8">
            <Button variant="outline" asChild>
              <a href="/es/" class="inline-flex items-center">
                <LuArrowLeft className="h-4 w-4 mr-2" />
                {t.navigation?.backToPortfolio || 'Volver al Portafolio'}
              </a>
            </Button>
          </div>

          <!-- Project Display -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Project Header -->
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8">
              <div class="flex items-center mb-4">
                {project.icon && (
                  <img
                    src={project.icon}
                    alt={`Icono de ${project.title}`}
                    class="w-12 h-12 mr-4"
                  />
                )}
                <h1 class="text-4xl font-bold">{project.title}</h1>
              </div>
              {project.generalDescription && (
                <p class="text-xl opacity-90 max-w-3xl">
                  {project.generalDescription}
                </p>
              )}
            </div>

            <!-- Project Body -->
            <div class="p-8">
              <!-- Technologies Section -->
              <div class="mb-8">
                <h2 class="text-2xl font-semibold mb-4">{t.projects?.technologies || 'Tecnologías'}</h2>
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                  {project.technologies.map((tech) => (
                    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                      <span class="font-medium text-sm">{tech.name}</span>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex flex-wrap gap-4 mb-8">
                {project.siteLink && (
                  <Button size="lg" asChild>
                    <a href={project.siteLink} target="_blank" rel="noopener noreferrer">
                      {t.projects?.visitSite || 'Visitar Sitio'}
                    </a>
                  </Button>
                )}
                {project.repoLink && (
                  <Button variant="outline" size="lg" asChild>
                    <a href={project.repoLink} target="_blank" rel="noopener noreferrer">
                      {t.projects?.seeRepository || 'Ver Repositorio'}
                    </a>
                  </Button>
                )}
              </div>

              <!-- Tech Description -->
              {project.techDescription && (
                <div class="mb-8">
                  <h2 class="text-2xl font-semibold mb-4">{t.projects?.techDescription || 'Detalles Técnicos'}</h2>
                  <p class="text-gray-700 leading-relaxed">{project.techDescription}</p>
                </div>
              )}

              <!-- Project Image -->
              {project.imageSrc && (
                <div class="mb-8">
                  <h2 class="text-2xl font-semibold mb-4">{t.projects?.preview || 'Vista Previa'}</h2>
                  <img
                    src={project.imageSrc}
                    alt={`Captura de pantalla de ${project.title}`}
                    class="w-full rounded-lg shadow-lg"
                  />
                </div>
              )}
            </div>
          </div>

          <!-- Project Navigation -->
          <div class="flex justify-between items-center mt-12">
            <div>
              {navigation.prev && (
                <Button variant="outline" asChild>
                  <a href={`/es/${navigation.prev}`} class="inline-flex items-center">
                    <LuArrowLeft className="h-4 w-4 mr-2" />
                    {t.navigation?.previousProject || 'Proyecto Anterior'}
                  </a>
                </Button>
              )}
            </div>
            <div>
              {navigation.next && (
                <Button variant="outline" asChild>
                  <a href={`/es/${navigation.next}`} class="inline-flex items-center">
                    {t.navigation?.nextProject || 'Siguiente Proyecto'}
                    <LuArrowRight className="h-4 w-4 ml-2" />
                  </a>
                </Button>
              )}
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>